<Page x:Class="ContractMonthlyClaimSystem2.Claim_Models_and_Services"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Claim Models and Services"
      Background="#F4F5F7">

    <Page.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#1976D2" CornerRadius="10" Padding="15" Margin="0,0,0,20">
            <DockPanel>
                <TextBlock Text="Claim Models &amp; Services"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"/>
                <Button Content="🔄 Refresh"
                        Width="120"
                        Height="36"
                        Background="#1565C0"
                        Foreground="White"
                        Padding="8,4"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        DockPanel.Dock="Right"
                        Margin="5,0,0,0"/>
            </DockPanel>
        </Border>

        <!-- Content Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Card 1 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Claim Models" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Defines claim-related data like Lecturer details, claim amount, and submission date."
                                   TextWrapping="Wrap" FontSize="13" Foreground="#555" Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="View Models" Width="130" Background="#4CAF50" Foreground="White" Margin="0,0,10,0"/>
                            <Button Content="Edit Models" Width="130" Background="#FFA000" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Card 2 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Claim Services" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Manages claim lifecycle including approval, rejection, and payment updates."
                                   TextWrapping="Wrap" FontSize="13" Foreground="#555" Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="View Services" Width="130" Background="#2196F3" Foreground="White" Margin="0,0,10,0"/>
                            <Button Content="Add Service" Width="130" Background="#9C27B0" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Card 3 -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="💾 Database Operations" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Handles saving, retrieving, and updating claims in the database for consistency."
                                   TextWrapping="Wrap" FontSize="13" Foreground="#555" Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Test Connection" Width="150" Background="#00ACC1" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ✅ Card 4: Claim Status Tracking -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🚦 Claim Status Tracking" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Track each claim transparently until settlement. The status updates in real-time when approved or rejected."
                                   TextWrapping="Wrap" FontSize="13" Foreground="#555" Margin="0,0,0,15"/>

                        <!-- Status Label -->
                        <TextBlock Text="Current Status: Under Review"
                                   FontWeight="SemiBold"
                                   Foreground="#1565C0"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>

                        <!-- Progress Bar -->
                        <ProgressBar Minimum="0" Maximum="100" Value="50" Height="20" Foreground="#43A047" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Simulate Approval" Width="160" Background="#43A047" Foreground="White" Margin="0,0,10,0"/>
                            <Button Content="Simulate Rejection" Width="160" Background="#E53935" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
