<Window x:Class="ContractMonthlyClaimSystem2.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="900"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,0,12">
            <Label x:Name="lblUserInfo" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" />
            <Button Content="Logout" HorizontalAlignment="Right" Margin="8,0,0,0" Click="Logout_Click" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Create User Panel -->
            <GroupBox Header="Create New User" Grid.Column="0" Margin="0,0,12,0">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <Label Content="Email:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtNewUserEmail" Width="300"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <Label Content="Password:" Width="120" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtNewUserPassword" Width="300"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <Label Content="Full name:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtNewUserFullName" Width="300"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <Label Content="Role:" Width="120" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cmbRole" Width="200">
                            <ComboBoxItem>Admin</ComboBoxItem>
                            <ComboBoxItem>Manager</ComboBoxItem>
                            <ComboBoxItem>Coordinator</ComboBoxItem>
                            <ComboBoxItem>Lecturer</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                        <Button Content="Create User" Width="120" Click="CreateUser_Click" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Change Password Panel -->
            <GroupBox Header="Change Password (Current User)" Grid.Column="1">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <Label Content="Old password:" Width="140" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtOldPassword" Width="300"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <Label Content="New password:" Width="140" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtNewPassword" Width="300"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <Label Content="Confirm new:" Width="140" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtConfirmPassword" Width="300"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                        <Button Content="Change Password" Width="140" Click="ChangePassword_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Footer / Info -->
        <TextBlock Grid.Row="2" TextWrapping="Wrap" Foreground="Gray">
            Use this panel to manage users and perform admin tasks. All sensitive operations are audited.
        </TextBlock>
    </Grid>
</Window>
