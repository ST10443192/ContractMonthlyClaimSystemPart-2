<Window x:Class="ContractMonthlyClaimSystem2.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Dialog"
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA">
    <Border CornerRadius="10" BorderBrush="#DDDDDD" BorderThickness="1" Padding="15" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="lblPrompt"
                       Text="Please enter a value:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"
                       Foreground="#333"/>

            <TextBox x:Name="txtInput"
                     Grid.Row="1"
                     Height="35"
                     Padding="10,5"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     FontSize="13"
                     Foreground="#222"
                     Background="#F9F9F9"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0">
                <Button x:Name="btnOK"
                        Content="OK"
                        Click="OK_Click"
                        Width="80"
                        Margin="0,0,10,0"
                        Padding="6,3"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>

                <Button x:Name="btnCancel"
                        Content="Cancel"
                        Click="Cancel_Click"
                        Width="80"
                        Padding="6,3"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
